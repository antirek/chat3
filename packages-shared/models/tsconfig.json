{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "composite": false,
    "paths": {
      "@chat3/utils": ["../utils/dist/index.js"],
      "@chat3/utils/*": ["../utils/dist/*"],
      "@chat3/models": ["./dist/index.js"],
      "@chat3/models/*": ["./dist/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.js", "../utils"]
}
