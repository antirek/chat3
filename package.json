{
  "name": "chat3",
  "version": "0.0.42",
  "description": "Node.js project",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages-shared/*"
  ],
  "scripts": {
    "start:tenant-api": "npm run start --workspace=@chat3/tenant-api",
    "start:controlo-backend": "npm run start --workspace=@chat3/controlo-backend",
    "start:controlo-ui": "npm run start --workspace=@chat3/controlo-ui",
    "start:update-worker": "npm run start --workspace=@chat3/update-worker",
    "start:dialog-read-worker": "npm run start --workspace=@chat3/dialog-read-worker",
    "start:all": "npm run start:tenant-api & npm run start:controlo-backend & npm run start:update-worker",
    "dev": "npm run dev --workspace=@chat3/tenant-api",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:e2e": "npm run test:e2e --workspace=@chat3/controlo-ui",
    "test:e2e:ui": "npm run test:e2e:ui --workspace=@chat3/controlo-ui",
    "test:e2e:members": "npm run test:e2e:members --workspace=@chat3/controlo-ui",
    "test:e2e:add-member": "npm run test:e2e:add-member --workspace=@chat3/controlo-ui",
    "build": "npm run build -w @chat3/models && npm run build -w @chat3/utils && npm run build --workspaces --if-present",
    "build:watch": "npm run build:watch --workspaces --if-present",
    "publish:client": "npm run build --workspace=@chottodev/chat3-tenant-api-client && (cd packages/tenant-api-client && npm publish)",
    "publish:client:patch": "npm run build --workspace=@chottodev/chat3-tenant-api-client && (cd packages/tenant-api-client && npm version patch && npm publish)",
    "publish:client:minor": "npm run build --workspace=@chottodev/chat3-tenant-api-client && (cd packages/tenant-api-client && npm version minor && npm publish)",
    "publish:client:major": "npm run build --workspace=@chottodev/chat3-tenant-api-client && (cd packages/tenant-api-client && npm version major && npm publish)",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "amqplib": "^0.10.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "joi": "^18.0.1",
    "mongoose": "^8.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "@onify/fake-amqplib": "^3.2.0",
    "@playwright/test": "^1.57.0",
    "@types/amqplib": "^0.10.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^28.7.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "playwright": "^1.57.0",
    "ts-jest": "^29.4.6",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  }
}
