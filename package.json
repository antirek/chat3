{
  "name": "chat3",
  "version": "0.0.24",
  "description": "Node.js project",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages-shared/*"
  ],
  "scripts": {
    "start:tenant-api": "npm run start --workspace=@chat3/tenant-api",
    "start:gateway": "npm run start --workspace=@chat3/gateway",
    "start:control-api": "npm run start --workspace=@chat3/control-api",
    "start:api-test": "npm run start --workspace=@chat3/api-test",
    "start:update-worker": "npm run start --workspace=@chat3/update-worker",
    "start:dialog-read-worker": "npm run start --workspace=@chat3/dialog-read-worker",
    "start:all": "npm run start:tenant-api & npm run start:gateway & npm run start:update-worker",
    "dev": "npm run dev --workspace=@chat3/tenant-api",
    "seed": "node src/scripts/seed.js",
    "add-test-users": "node src/scripts/add-test-users.js",
    "add-dialog-members": "node src/scripts/add-dialog-members.js",
    "fill-message-status-usertype": "node src/scripts/fill-message-status-usertype.js",
    "update-message-reaction-index": "node src/scripts/update-message-reaction-index.js",
    "update-message-status-index": "node src/scripts/update-message-status-index.js",
    "generate-key": "node src/scripts/generateApiKey.js",
    "generate-demo-key": "node src/scripts/generateDemoApiKey.js",
    "migrate-counters": "node src/scripts/migrate-counters.js",
    "validate-counters": "node src/scripts/validate-counters.js",
    "migrate-dialog-activity": "node src/scripts/migrate-dialog-activity.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:members": "playwright test packages/api-test/src/tests/user-dialogs-members-modal.spec.js",
    "test:e2e:add-member": "playwright test packages/api-test/src/tests/add-member-modal.spec.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "amqplib": "^0.10.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "joi": "^18.0.1",
    "mongoose": "^8.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "@onify/fake-amqplib": "^3.2.0",
    "@playwright/test": "^1.57.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.9.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "playwright": "^1.57.0"
  }
}
